
<section class="posts-list">

    <% if !@posts.empty? %>
      <% @posts.each do |post| %>
      <table>
        <tr>
          <td class="post-title"><%= link_to "#{raw truncate(post.title, :length => 30)}", post %></td>
        </tr>
      </table>
    <% end %>
    <% else %>
      There are no posts.
    <% end %>

  <div class="new-post">
  <%= link_to 'New Post', new_post_path %>
  </div>

</section>


<% if !@posts.empty? %>
<section class="main-post">
      <div class="main-post-title"><%= @posts.last.title %></div>
      <div class="main-post-content"><%= raw @posts.last.content %></div>
</section>

<% else %>
  There are no posts.
<% end %>

<div class="profile">
<%= image_tag "verdi.jpg" %>
<span class="greeting">Hello.</span>
</div>






